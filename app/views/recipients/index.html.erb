<p id="notice"><%= notice %></p>

<h1>送付先一覧表示</h1>

<%= link_to "エクスポート", recipients_path(format: :csv), class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>会社名</th>
      <th>部署1</th>
      <th>部署2</th>
      <th>役職</th>
      <th>郵便番号</th>
      <th>住所1</th>
      <th>住所2</th>
      <th>担当者</th>
      <th>喪中</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipients.each do |recipient| %>
      <tr>
        <td><%= recipient.name %></td>
        <td><%= recipient.shamei %></td>
        <td><%= recipient.sec_name1 %></td>
        <td><%= recipient.sec_name2 %></td>
        <td><%= recipient.position %></td>
        <td><%= recipient.post_code %></td>
        <td><%= recipient.address1 %></td>
        <td><%= recipient.address2 %></td>
        <td><%= recipient.honor %></td>
        <td><%= recipient.dolor %></td>
        <td><%= recipient.note %></td>
        <td><%= link_to '詳細', recipient %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '送信先新規作成', new_recipient_path %>
